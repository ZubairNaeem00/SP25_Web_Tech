<h1 class="title ps-4 pt-2"> Category </h1>
<a class="add-new" href="/admin/dashboard/create-category"> + Add new category</a>

<div class="order-ribbon-t">
  <strong>ID</strong>
  <div class="info">
    <strong>Category</strong>
  </div>
  <strong>Total products</strong>
  <strong class="icon"><img class="edit_icon" src="/Media/Icons/edit.png" alt="Edit"> </strong>
</div>

<% categories.forEach((category, index) => { %>
  <div class="order-ribbon">
    <span><%= index + 1 %></span> 
    <div class="info">
      <span><%= category.name %></span> 
    </div>
    <span><%= category.totalProducts %></span> 
    <span class="icon">
      <a href="/admin/dashboard/category/edit/<%= category._id %>">
        <img class="edit_icon" src="/Media/Icons/edit.png" alt="Edit">
      </a>
      <a class="ps-2" href="/admin/dashboard/category/<%= category._id %>" 
        onclick="return confirm('Are you sure you want to delete this category?');" >
        <i class="fas fa-trash-alt" style="color: red;"></i>
      </a>
    </span>
  </div>
<% }) %>
