

<style>
    /* Reset some defaults */
body {
  margin: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: #f8f9fa;
  color: #333;
}

.product-title {
  text-align: center;
  padding: 20px 0;
  font-size: 2rem;
  color: #222;
  border-bottom: 2px solid #ddd;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 25px;
  padding: 30px 50px;
}

.product-card {
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
  padding: 15px;
  text-align: center;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 18px rgba(0, 0, 0, 0.12);
}

.product-card img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 6px;
}

.product-card h3 {
  margin: 10px 0 5px;
  font-size: 1.2rem;
  color: #444;
}

.product-card .price {
  color: #28a745;
  font-weight: bold;
  margin-bottom: 10px;
}

.view-btn {
  text-decoration: none;
  background: #292929;
  color: white;
  padding: 8px 14px;
  border-radius: 6px;
  display: inline-block;
  margin-top: 8px;
  transition: background 0.2s;
}

.view-btn:hover {
  background: #2b2b2b;
}

</style>



<div class="product-grid">
  <% products.forEach(product => { %>
    <div class="product-card">
      <img src="../Media/Images/Products/<%= product.product_image %>" alt="<%= product.name %>">
      <h3><%= product.name %></h3>
      <p class="price">PKR <%= product.price %></p>
      <a href="/product/<%= product._id %>" class="view-btn">View Product</a>
    </div>
  <% }) %>
</div>

